<div class="rounded-2xl p-6 {{ component.grid_span }}
    {% if component.data.type == 'warning' %}
    bg-yellow-50 border-l-4 border-yellow-500
    {% elif component.data.type == 'danger' %}
    bg-red-50 border-l-4 border-red-500
    {% elif component.data.type == 'success' %}
    bg-green-50 border-l-4 border-green-500
    {% elif component.data.type == 'info' %}
    bg-blue-50 border-l-4 border-blue-500
    {% else %}
    bg-gray-50 border-l-4 border-gray-500
    {% endif %}
">
    <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center
            {% if component.data.type == 'warning' %}
            bg-yellow-100 text-yellow-600
            {% elif component.data.type == 'danger' %}
            bg-red-100 text-red-600
            {% elif component.data.type == 'success' %}
            bg-green-100 text-green-600
            {% elif component.data.type == 'info' %}
            bg-blue-100 text-blue-600
            {% else %}
            bg-gray-100 text-gray-600
            {% endif %}
        ">
            {% if component.data.type == 'warning' %}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            {% elif component.data.type == 'danger' %}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            {% elif component.data.type == 'success' %}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {% else %}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            {% endif %}
        </div>
        <div>
            {% if component.data.title %}
            <h4 class="font-semibold mb-1
                {% if component.data.type == 'warning' %}text-yellow-800
                {% elif component.data.type == 'danger' %}text-red-800
                {% elif component.data.type == 'success' %}text-green-800
                {% elif component.data.type == 'info' %}text-blue-800
                {% else %}text-gray-800{% endif %}
            ">{{ component.data.title }}</h4>
            {% endif %}
            <p class="text-sm
                {% if component.data.type == 'warning' %}text-yellow-700
                {% elif component.data.type == 'danger' %}text-red-700
                {% elif component.data.type == 'success' %}text-green-700
                {% elif component.data.type == 'info' %}text-blue-700
                {% else %}text-gray-700{% endif %}
            ">{{ component.data.body }}</p>
        </div>
    </div>
</div>
