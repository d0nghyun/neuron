{
    "hooks": {
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/telegram-notify.sh stop"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "AskUserQuestion",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/telegram-notify.sh question"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "permission_prompt",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/telegram-notify.sh permission"
                    }
                ]
            }
        ]
    }
}
